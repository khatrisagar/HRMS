<div class="your_comment">
    <div class="heading">
        <h4>Add Your Comment</h4>
    </div>
    <hr>

    <div class="input">
        <div class="textbox">
            <input type="text" name="comment" id="comment" placeholder="Type here..">
        </div>
        <div class="button">
            <button onclick="addComment()">Comment</button>
        </div>
    </div>
    <div>
        <div class="comment">
            <%for(i=0;i<commentData.length;i++){%>

                <p> <%-commentData[i].comment%></p>
            <%}%>
        </div>
    </div>
    
</div>